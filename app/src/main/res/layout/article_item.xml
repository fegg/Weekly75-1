<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_horizontal_margin"
    android:orientation="vertical">

    <TextView
        android:id="@+id/lv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="WebKit Web Inspector 十年回顾"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/lv_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="WebKit Web Inspector 十周年了。从 Web 的荒蛮时代一路走过来，看看它都经历了哪些变化。"
        android:paddingTop="5dp" />
    <TextView
        android:id="@+id/lv_tags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="调试，WebKit，Inspector"
        android:paddingTop="5dp" />

    <TextView
        android:id="@+id/lv_provider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="匿名"
        android:paddingTop="5dp" />

</LinearLayout>
